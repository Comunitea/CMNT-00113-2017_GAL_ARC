<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_magento_backend_form" model="ir.ui.view">
        <field name="name">magento.backend.inherit.view.form</field>
        <field name="model">magento.backend</field>
        <field name="inherit_id" ref="connector_magento.view_magento_backend_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='update_product_stock_qty']/.." position="after">
                <label string="Force Update all the products stock quantities" class="oe_inline"/>
                <button name="force_update_product_stock_qty" type="object" class="oe_highlight" string="Forze update" confirm="This action will force the synchronization of the stock of all products, the process will take to complete"/>
            </xpath>

        </field>
    </record>
</odoo>
