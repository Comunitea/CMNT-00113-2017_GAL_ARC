<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[6]" position="replace">
            <td class="text-right">
                <span t-esc="', '.join(map(lambda x: (x.tax_group_id.name), l.invoice_line_tax_ids))"/>
            </td>
        </xpath>
        <xpath expr="//div[@class='row mt32 mb32']//div[3]/strong" position="replace">
            <strong>Due:</strong>
        </xpath>
        <xpath expr="//div[@class='row mt32 mb32']//div[4]/strong" position="replace">
            <strong>Order:</strong>
        </xpath>
    </template>
</odoo>
