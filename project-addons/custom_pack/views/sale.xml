<odoo>
    <record id="view_order_form_add_pack" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="order_line" position="before">
                <button string="Add pack" name="%(sale_order_add_pack_action)d" type="action"/>
            </field>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="pack_parent_line" invisible="1"/>
                <field name="pack_line" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[(['is_pack', '=', False]), ('sale_ok', '=', True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="attributes">
                <attribute name="domain">[(['is_pack', '=', False]) ('sale_ok', '=', True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-danger">pack_parent_line!= False</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('pack_line', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="attrs">{'readonly': [('pack_line', '=', True)]}</attribute>
            </xpath>
            <!--xpath expr="//field[@name='order_line']//tree" position="inside">
                <button name="%(sale_order_add_pack_action)d"
                        type="action"
                        string="Modify pack"
                        icon="fa-th"
                        class="oe_edit_only"
                        context="{'default_product': product_id, 'default_qty': product_uom_qty}"
                        attrs="{'invisible': ['|', ('pack_line', '=', False), ('pack_parent_line', '!=', False)]}"
                />
            </xpath-->
        </field>
    </record>
</odoo>
